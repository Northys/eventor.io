{block #content}
    <div class="row">
        <div class=col-sm-9>
            <h1>{$event->name}
                <small>{$event->date|date:'j.n.Y'} @ {$event->place}</small>
            </h1>
            <table class="table table-hover table-striped">
                <tr>
                    <th class="icon_column"></th>
                    <th class="icon_column"></th>
                    <th class="icon_column"></th>
                    <th>Jméno</th>
                    <th>Třída</th>
                    <th>Autor skladby</th>
                    <th>Název skladby</th>
                    <th>Hudební nástroj</th>
                </tr>
                <tr n:foreach="$event->children as $child">
                    <td><a n:href="deleteChild! $event->id, $child->id"><i
                                    class="glyphicon glyphicon-remove-circle"></i></a></td>
                    <td><a n:href="changeOrder! $event->id, $child->id, up"><i
                                    class="glyphicon glyphicon-upload"></i></a></td>
                    <td><a n:href="changeOrder! $event->id, $child->id, down"><i
                                    class="glyphicon glyphicon-download"></i></a></td>
                    <td>{$child->name}</td>
                    <td>{$child->teacher->class} - {$child->teacher->name}</td>
                    <td>{$child->songAuthor}</td>
                    <td>{$child->songName}</td>
                    <td>{$child->instrument}</td>
                </tr>
            </table>

            {control addChildForm}
        </div>
        <div class="col-sm-3">
            {control editEventForm}
        </div>
    </div>
{/block}
